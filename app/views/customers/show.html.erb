<div class="container">
  <div class="row my-5">
    <div class="col">
      <h1><%= "#{@customer.first_name} #{@customer.last_name}"%></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h3>This customer has <%= @customer.dogs.count %> dogs: </h3>
      <ul>
        <% @customer.dogs.each do |dog|%>
          <li><%= link_to dog.dog_name, dog %> </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <h3>This customer has <%= @customer.products.count %> products in his cart:</h3>
      <div>
          <ul>
              <% @customer.products.each do |product| %>
                  <li><%= link_to product.product_name, product %></li>
              <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>






